= render :partial => "layouts/flash_msg"
.container-fluid.container-tiles-pf.ems-physical-infra-dashboard
  .row.row-tile-pf
    = react 'AggregateStatusCard', {:providerId => @record.id.to_s, :providerType => 'ems_physical_infra'}
  .row.row-tile-pf
    .col-xs-12.col-sm-12.col-md-6
      = react 'ServersDataChart', {:providerId => @record.id.to_s, :title => _('Servers Data'),:serversAvailableConfig => 'availableServersUsageConfig', :serversHealthConfig => 'serversHealthUsageConfig',:apiUrl => 'ems_physical_infra_dashboard/servers_group_data'}
      %server-health-pie-chart{:provider_id => @record.id}
  .row.row-tile-pf
    .col-xs-12.col-sm-12.col-md-6
      = react 'RecentVmGraph', {:providerId => @record.id.to_s, :title => _('Recent Servers'), :config => 'recentServersConfig', :apiUrl => 'ems_physical_infra_dashboard/recent_servers_data', :dataPoint => 'recentServers'}
      %recent-servers-line-chart{:provider_id => @record.id}

  :javascript
    miq_bootstrap('.ems-physical-infra-dashboard');
